<Page
    x:Class="IPOkemon_Raul_Calzado.JugadoresPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:IPOkemon_Raul_Calzado"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="417*"/>
            <RowDefinition Height="81*"/>
            <RowDefinition Height="86*"/>
            <RowDefinition Height="417*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="578*"/>
            <ColumnDefinition Width="171*"/>
            <ColumnDefinition Width="171*"/>
            <ColumnDefinition Width="607*"/>
        </Grid.ColumnDefinitions>

        <Viewbox Grid.Column="2" Grid.Row="2">
            <Button x:ConnectionId='4' x:Name="btn2jug" x:Uid="BotonDosJugadores" Content="2 Jugadores" Width="154" Height="80" Grid.Column="2" Grid.Row="2"                       FontSize="20" FontWeight="Bold"/>
        </Viewbox>
        <Viewbox Grid.Column="1" Grid.Row="2">
            <Button x:ConnectionId='3' x:Name="btn1jug" x:Uid="BotonUnJugador" Content="1 Jugador" Width="154" Height="80" Grid.Row="1"                       FontWeight="Bold" FontSize="20"/>
        </Viewbox>
        <Viewbox Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2" Margin="0,0,3,85" Grid.RowSpan="2">
            <TextBlock x:ConnectionId='2' x:Name="lblEleccion" x:Uid="lblEleccion" Text="Elige el modo de juego" Width="227" Height="51" Grid.ColumnSpan="2" Grid.Row="0" HorizontalAlignment="Center" HorizontalTextAlignment="Center" VerticalAlignment="Center" FontSize="20" FontWeight="Bold" Grid.Column="1"/>

        </Viewbox>
        <!-- Esto es lo que tenía antes, mirar bien por si se puede usar
        <TextBox Text="Estás en el combate" FontSize="35"/>
        <RelativePanel>
            <RatingControl x:Name="rcStars" HorizontalAlignment="Center" VerticalAlignment="Center" Width="80" Height="32" RelativePanel.AlignVerticalCenterWithPanel="True"/>
            <TextBox x:Name="tbPokemon" HorizontalAlignment="Left" Height="51" Text="Pikachu" TextWrapping="Wrap" VerticalAlignment="Center" Background="{x:Null}" FontSize="30" RelativePanel.AlignVerticalCenterWith="rcStars" RelativePanel.RightOf="rcStars"/>
        </RelativePanel>
        -->
    </Grid>
</Page>

