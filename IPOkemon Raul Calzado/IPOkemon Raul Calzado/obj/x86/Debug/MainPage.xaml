<Page
    x:Class="IPOkemon_Raul_Calzado.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:IPOkemon_Raul_Calzado"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Button x:ConnectionId='14' x:Name="btnCompactar" Margin="4"                           >
                <FontIcon Foreground="White" Glyph="&#xE700;" FontFamily="Segoe MDL2 Assets" />
            </Button>
        </Border>

        <SplitView x:ConnectionId='2' x:Name="sView" Grid.Row="1" Grid.ColumnSpan="2" IsPaneOpen="True" DisplayMode="CompactInline" CompactPaneLength="50">
            <SplitView.Pane>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50"></ColumnDefinition>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <SymbolIcon x:ConnectionId='3' Grid.Row="0" Margin="4" Symbol="Home"                          ></SymbolIcon>
                    <SymbolIcon x:ConnectionId='4' Grid.Row="1" Margin="4" Symbol="Pictures"                           ></SymbolIcon>
                    <SymbolIcon x:ConnectionId='5' Grid.Row="2" Margin="4" Symbol="People"                           ></SymbolIcon>
                    <SymbolIcon x:ConnectionId='6' Grid.Row="3" Margin="4" Symbol="Help"                          ></SymbolIcon>
                    <SymbolIcon x:ConnectionId='7' Grid.Row="4" Margin="4" Symbol="Flag"                          ></SymbolIcon>
                    <Button x:ConnectionId='8' x:Name="btnInicio" x:Uid="BotonInicio" Grid.Column="1" Grid.Row="0" Content="Inicio" HorizontalAlignment="Stretch" Margin="8,8,8,0" FontSize="20"                 />
                    <Button x:ConnectionId='9' x:Name="btnPokedex" x:Uid="BotonPokedex" Grid.Column="1" Grid.Row="1" Content="Pokédex" HorizontalAlignment="Stretch" Margin="8,8,8,0" FontSize="20"                  />
                    <Button x:ConnectionId='10' x:Name="btnCombate" x:Uid="BotonCombate" Grid.Column="1" Grid.Row="2" Content="Combate" HorizontalAlignment="Stretch" Margin="8,8,8,0" FontSize="20"                  />
                    <Button x:ConnectionId='11' x:Name="btnAcerca" x:Uid="BotonAcerca" Grid.Column="1" Grid.Row="3" Content="Acerca de" HorizontalAlignment="Stretch" Margin="8,8,8,0" FontSize="20"                 />
                    <Button x:ConnectionId='12' x:Name="btnIdioma" x:Uid="BotonIdioma" Grid.Column="1" Grid.Row="4" Content="Cambiar idioma" HorizontalAlignment="Stretch" Margin="8,8,8,0" FontSize="20" />
                </Grid>
            </SplitView.Pane>
            <Frame x:ConnectionId='13' x:Name="fmMain" Grid.Column="1" Grid.Row="1"                             />

        </SplitView>
    </Grid>
</Page>

